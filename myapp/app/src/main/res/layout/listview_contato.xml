<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/imgContato"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
    />

    <TextView
        android:id="@+id/tvNomeContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgContato"
        android:layout_alignTop="@id/imgContato"
        android:textColor="@color/black"
        android:text="Nome Contato"
    />

    <TextView
        android:id="@+id/tvTelefoneContato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgContato"
        android:layout_alignBottom="@id/imgContato"
        android:text="Telefone"
    />
</RelativeLayout>